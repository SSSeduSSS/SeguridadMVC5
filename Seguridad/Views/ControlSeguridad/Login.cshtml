<link href="~/Content/login.css" rel="stylesheet" />
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-center">Inicia Sesión</h5>

                <form class="form-signin" method="post">
                    <div class="form-label-group">
                        <input type="text" id="inputEmail" name="nombre" class="form-control" placeholder="Correo Electrónico" required autofocus>
                        <label for="inputEmail">Usuario</label>
                    </div>

                    <div class="form-label-group">
                        <input type="password" name="passw" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                        <label for="inputPassword">Contraseña</label>
                    </div>

                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" name="recordarContrasenia" class="custom-control-input" id="customCheck1">
                        <label class="custom-control-label" for="customCheck1">Recordar Contraseña</label>
                    </div>
                    <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit">Iniciar</button>
                    <br />
                    @Html.ActionLink("¿No tienes cuenta?", "", "", null, new { @class = "btn btn-primary btn-block" })
                    <hr class="my-4">
                    <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Loguearte con Google</button>
                    <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Loguearte con Facebook</button>

                </form>

            </div>
        </div>
    </div>
</div>
