<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Nav.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav id="navSuper" class="navbar navbar-expand-lg navbar-dark  container">
        <div class="container">
            @Html.ActionLink("Gasolineras ecológicas", "Home", "TodosUsuarios", null,
                       new { @class= "navbar-brand", @id= "linkStyleNav" })

            <div class="collapse navbar-collapse" id="pac1o">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Zona general", "TodosUsuarios", "Home",null,
                       new { @class= "nav-link" ,@id= "linkStyleNav" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Compras", "UsuariosLogueados", "Home",null,
                       new { @class= "nav-link" ,@id= "linkStyleNav" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Zona administración", "Trabajadores", "Home",null,
                       new { @class= "nav-link" ,@id= "linkStyleNav" })
                    </li>
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("admin"))
                            {
                                <div class="WrapperUser">
                                    <ul>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle desplegableUser" data-toggle="dropdown">
                                                <i class="fas fa-user-circle"></i>
                                                <strong>ADMIN</strong>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <div class="navbar-login">
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <p class="text-center"><strong>Privilegios Admin</strong></p>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-12 text-center">
                                                                <button type="button" class="btn btn-primary">Mi perfil</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                                <li class="divider"></li>
                                                <li>
                                                    <div class="navbar-login navbar-login-session">
                                                        <div class="row">
                                                            <div class="col-sm-12 text-center">
                                                                @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "ControlSeguridad", null, new { @class = "btn btn-danger" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else // Todos lops usuairos registrados que no sea admin
                            {
                                <div class="WrapperUser">
                                    <ul>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle desplegableUser" data-toggle="dropdown">
                                                <i class="fas fa-user-circle"></i>
                                                <strong>USUARIO</strong>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <div class="navbar-login">
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <p class="text-center"><strong>Privilegios Usuario</strong></p>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-12 text-center">
                                                                <button type="button" class="btn btn-primary">Mi perfil</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                                <li class="divider"></li>
                                                <li>
                                                    <div class="navbar-login navbar-login-session">
                                                        <div class="row">
                                                            <div class="col-sm-12 text-center">
                                                                @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "ControlSeguridad", null, new { @class = "btn btn-danger" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="WrapperUser">
                                <ul>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:black;">
                                            <i class="fas fa-user-circle"></i>
                                            <strong>Login</strong>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <div class="navbar-login">
                                                    <div class="row">
                                                        <div class="col-sm-12 text-center">
                                                            @Html.ActionLink("Iniciar Sesion", "Login", "ControlSeguridad", null, new { @class = "btn btn-info" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <br />
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />



        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - <strong>Gasolinera Ecologica S.L.</strong></p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>